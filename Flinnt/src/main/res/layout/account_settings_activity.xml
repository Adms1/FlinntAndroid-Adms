<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
>
<!--tools:context="com.example.dialogs.MuteDialogActivity" -->

    <include layout="@layout/tool_bar" />

    <View
        android:id="@+id/devider_1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:id="@+id/layout_comment_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp" >

        <ImageView
            android:id="@+id/image_comments_reply"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_settings_comment" />

        <TextView
            android:id="@+id/textview_comment_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/account_comment_reply_cb"
            android:layout_toRightOf="@id/image_comments_reply"
            android:singleLine="false"
            android:text="@string/comment_reply"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
        <!--
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_comment_reply"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/switch_toggle"
            android:thumb="@android:color/transparent"
            android:track="@android:color/transparent" />
        -->

        <CheckBox
            android:id="@+id/account_comment_reply_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <View
        android:id="@+id/devider_2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:id="@+id/layout_mute_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp" >

        <ImageView
            android:id="@+id/image_mute"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_settings_mute" />

        <TextView
            android:id="@+id/textview_mute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/accound_sound_cb"
            android:layout_toRightOf="@+id/image_mute"
            android:singleLine="false"
            android:text="@string/sound"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
        <!--
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_mute_all"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/switch_toggle"
            android:gravity="center"
            android:thumb="@android:color/transparent"
            android:track="@android:color/transparent" />
        -->

        <CheckBox
            android:id="@+id/accound_sound_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray" />
    
    <RelativeLayout
        android:id="@+id/layout_auto_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp" >

        <ImageView
            android:id="@+id/image_auto_download"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_settings_autodownload" />

        <TextView
            android:id="@+id/textview_auto_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/cb_auto_download"
            android:layout_toRightOf="@+id/image_auto_download"
            android:singleLine="false"
            android:text="@string/auto_download"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
        
        <CheckBox
            android:id="@+id/cb_auto_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

</LinearLayout>