<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dialogs.MuteDialogActivity" >

    <View
        android:id="@+id/devider_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/seprator_color" />

    <RelativeLayout
        android:id="@+id/layout_comment_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/course_comment_reply_cb"
            android:background="@color/white"
            android:singleLine="false"
            android:text="@string/course_comment_reply"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <!--
             <Switch
            android:id="@+id/switch1"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:background="@drawable/switch_toggle"
            android:thumb="@android:color/transparent"
            android:track="@android:color/transparent" />
        -->

        <CheckBox
            android:id="@+id/course_comment_reply_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" />
    </RelativeLayout>

    <View
        android:id="@+id/devider_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/seprator_color" />

    <RelativeLayout
        android:id="@+id/layout_mute_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/course_sound_cb"
            android:background="@color/white"
            android:singleLine="false"
            android:text="@string/course_sound"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <!--
             <Switch
            android:id="@+id/switch2"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:background="@drawable/switch_toggle"
            android:gravity="center"
            android:thumb="@android:color/transparent"
            android:track="@android:color/transparent" />
        -->

        <CheckBox
            android:id="@+id/course_sound_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/seprator_color" />
    
	<TextView
            android:id="@+id/course_mute_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/course_comment_reply_cb"
        android:background="@color/white"
        android:padding="10dp"
            android:singleLine="false"
            android:text="@string/course_mute_setting_message"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:visibility="gone"  />
    
</LinearLayout>