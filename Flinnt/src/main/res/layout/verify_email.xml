<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_backgroung"
    android:orientation="vertical" >

    <include layout="@layout/tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/logo_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="44dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/flinnt_app_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/sent_verification_link_txt_verifyemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="start"
                    android:text="@string/sent_verification_link_on_email"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_color"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="12dp"
                    android:gravity="start"
                    android:text="@string/click_link_and_verify"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_color"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:layout_marginTop="26dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/email_not_received_txt_verifyemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="start"
                    android:text="@string/email_not_received"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/button_holo_text_color"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/already_verified_button_verifyemail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/bg_account_blue_edges"
                    android:capitalize="characters"
                    android:text="@string/already_verified"
                    android:textColor="@color/button_dark_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="15dp"
                    android:gravity="start"
                    android:text="@string/call_for_help"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_color"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/terms_conditions_verifyemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/terms_and_condition_verify"
                android:onClick="onClick"
                android:textColor="@color/gray"
                android:textSize="11sp" />

            <Button
                android:id="@+id/logout_button_verifyemail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_account_blue_edges"
                android:capitalize="characters"
                android:text="@string/logout"
                android:textColor="@color/button_dark_text_color"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>