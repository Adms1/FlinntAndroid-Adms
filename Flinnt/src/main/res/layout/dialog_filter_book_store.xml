<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/linear_border2"
    android:layout_margin="@dimen/margin_5dp"
    android:layout_height="@dimen/_300sdp"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:padding="@dimen/margin_5dp"
        android:background="@color/ColorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">


            <ImageView
                android:id="@+id/close_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/close"
                android:padding="@dimen/margin_5dp"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refine your search"
                android:gravity="center"
                android:padding="@dimen/margin_5dp"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/white"/>



        </RelativeLayout>



    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_filter_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/btn_apply_filter"/>

    <Button
        android:id="@+id/btn_apply_filter"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/bg_account_blue_edges"
        android:capitalize="characters"
        android:layout_gravity="center|bottom"
        android:text="@string/apply_filters"
        android:padding="@dimen/_10sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_5sdp"
        android:textColor="@color/button_dark_text_color"
        android:textSize="14sp" />


</RelativeLayout>