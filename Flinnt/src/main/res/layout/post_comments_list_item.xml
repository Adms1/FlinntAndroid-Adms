<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent" >
            
        <com.edu.flinnt.util.SelectableRoundedCourseImageView
            android:id="@+id/post_comment_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/post_detail_placeholder" />
        
        </RelativeLayout>
        

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/post_comment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/post_comment_time"
                android:text="Jahnvi Dudani"
                android:singleLine="true"
                android:textColor="#1a1718"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/post_comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/post_comment_name"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:maxLines="50"
                android:text="Thanks, greate post"
                android:textColor="#5e5e5e"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/post_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/post_comment_name"
                android:layout_alignParentRight="true"
                android:text="02 JUL"
                android:layout_marginRight="10dp"
                android:textColor="#4D000000"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>    
	<View
	    android:layout_height="0.3dp"
	    android:layout_width="match_parent"
	    android:layout_marginLeft="50dp"
	    android:background="@android:color/darker_gray"

    />
</LinearLayout>
