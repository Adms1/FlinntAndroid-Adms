<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:id="@+id/quiz_summary_ll"
   android:minHeight="@dimen/margin_50dp" android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView android:id="@+id/section_name_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_weight="4.0"
            android:text="@string/quiz_persional_commu_summary_txt"
            android:textColor="@color/black" />

        <include layout="@layout/vertical_line_text" />

        <TextView android:id="@+id/total_que_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_weight="1.3"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <include layout="@layout/vertical_line_text" />

        <TextView android:id="@+id/correct_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <include layout="@layout/vertical_line_text" />

        <TextView android:id="@+id/wrong_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <include layout="@layout/vertical_line_text" />

        <TextView android:id="@+id/unanswer_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.1"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="17dp" />
    </LinearLayout>
</LinearLayout>