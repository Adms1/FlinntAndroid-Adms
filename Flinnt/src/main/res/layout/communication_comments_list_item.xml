<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/margin_50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10dp">

            <com.edu.flinnt.util.SelectableRoundedCourseImageView
                android:id="@+id/communication_comment_photo"
                android:layout_width="@dimen/margin_50dp"
                android:layout_height="@dimen/margin_50dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:src="@drawable/post_detail_placeholder" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/communication_comment_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/post_comment_time"
                android:singleLine="true"
                android:text="Dharmendra Barad"
                android:textColor="@color/title_color"
                android:textSize="@dimen/text_size_15sp" />

            <TextView
                android:id="@+id/communication_comment_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/communication_comment_name_txt"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_marginTop="3dp"
                android:maxLines="50"
                android:text="Thanks, greate post"
                android:textColor="@color/comment_color"
                android:textSize="@dimen/text_size_13sp" />

            <TextView
                android:id="@+id/communication_comment_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/communication_comment_name_txt"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10dp"
                android:text="02 JUL"
                android:textColor="@color/date_color"
                android:textSize="@dimen/text_size_13sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="@dimen/margin_50dp"
        android:background="@android:color/darker_gray"

        />
</LinearLayout>
