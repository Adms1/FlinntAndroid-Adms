<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/result_section_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/margin_70dp"
    android:weightSum="10">


    <TextView
        android:id="@+id/sr_no_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <include layout="@layout/vertical_line_text" />


    <TextView
        android:id="@+id/section_name_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_weight="3"
        android:gravity="center"
        android:text="Present future tense"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <include layout="@layout/vertical_line_text" />

    <TextView
        android:id="@+id/selected_answer_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_weight="1.3"
        android:gravity="center"
        android:text="B"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <include layout="@layout/vertical_line_text" />

    <TextView
        android:id="@+id/currect_answer_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_weight="1.3"
        android:gravity="center"
        android:text="C"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <include layout="@layout/vertical_line_text" />

    <TextView
        android:id="@+id/currect_answer_course_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_weight="2.1"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <include layout="@layout/vertical_line_text" />

    <TextView
        android:id="@+id/mark_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="17dp" />

</LinearLayout>