<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/content_top_boarder"
        android:gravity="center_vertical"
        android:minHeight="@dimen/cardview_toolbar_width"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:id="@+id/resorceTitleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/transparent"
            android:paddingLeft="10dp"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:ignore="UnusedAttribute" />


        <ImageView
            android:id="@+id/section_options_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/margin_3dp"
            android:layout_weight="4.5"
            android:paddingRight="@dimen/margin_5dp"
            android:src="@drawable/moreblack"
            android:scaleType="centerInside"/>


        <!--<android.support.v7.widget.Toolbar
            android:id="@+id/section_toolbar"
            android:layout_width="@dimen/cardview_toolbar_width"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/transparent" />-->
    </LinearLayout>

</LinearLayout>