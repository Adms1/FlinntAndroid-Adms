<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_10dp"
        card_view:cardUseCompatPadding="true"
        android:elevation="3dp"
        card_view:cardCornerRadius="margin_10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/popularstoryimage"
                android:src="@drawable/populatstoriesbanner"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#809b9d9c"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtstorytitle"
                    android:textColor="@color/white"
                    android:layout_above="@+id/txtstorycoursename"
                    android:textSize="@dimen/text_size_17sp"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:background="@android:color/transparent"
                    android:maxLines="1"
                    android:layout_marginBottom="@dimen/margin_1dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtstorycoursename"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15sp"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:background="@android:color/transparent"
                    android:maxLines="1"
                    android:layout_marginBottom="@dimen/margin_3dp"/>

            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>