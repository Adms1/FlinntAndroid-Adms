<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/dialog_buttons_changepassword"
            android:layout_below="@+id/dialog_title_changepassword"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/current_pass_changepass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Current Password"
                android:inputType="textPassword"></EditText>

            <EditText
                android:id="@+id/new_pass_changepass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="New Password"
                android:inputType="textPassword"></EditText>

            <EditText
                android:id="@+id/confirm_pass_changepass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Confirm New Password"
                android:inputType="textPassword"></EditText>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>